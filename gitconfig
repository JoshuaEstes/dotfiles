; ~/.gitconfig
[advice]
  statusHints = false
[alias]
  ; Add
  a = add

  ; Commit
  c = commit -m
  ca = commit -am

  ; Checkout
  co = checkout
  cb = checkout -b

  ; Diff
  d = diff

  ; Log
  lg = "log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative"

  ; Pull
  pl = pull

  ; Push
  ps = push
  
  ; Remote
  r = remote -v

  ; Stash
  ss = stash
  sl = stash list
  sa = stash apply
  sd = stash drop

  ; Status
  s = status

  ; Tag
  t = tag -n
[apply]
  whitespace = nowarn
[branch]
  autosetupmerge = true
[color]
  ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[commit]
;  template = ~/.gitconfig.d/commit.tmpl
[core]
  autocrlf = false
  editor = vim
  excludesfile = ~/.gitconfig.d/excludesfile
  mergeoptions = --no-ff
;  pager = ''
;  whitespace =
[diff]
;  external = diff
[help]
;  autocorrect = 1
[init]
; This is used when you git init a directory
;  templatedir = ~/.gitconfig.d/git-core/templates
[merge]
  tool = meld
  summary = true
  verbosity = 1
[push]
  default = tracking
[rerere]
  enabled = true
[user]
  email = Joshua.Estes@ScenicCityLabs.com
  name = Joshua Estes
