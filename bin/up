#!/usr/bin/env bash
# vim: set ft=sh
####
#
# Used to update a box
#
if [ $(uname) == "Linux" ]; then
    if [ $(command -v apt-get) ]; then
        sudo apt-get update
        sudo apt-get upgrade
    fi
else
    if [ $(command -v brew) ]; then
        brew update
        brew upgrade
    fi
fi
if [ $(command -v vim) ]; then
    vim +PluginUpdate +qall
fi
