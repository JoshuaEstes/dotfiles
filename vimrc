" ~/.vimrc

set nocompatible
set history=1000
set cf
set ffs=unix,dos,mac
set modeline
set tabpagemax=50



set nobackup
set nowritebackup
set noswapfile
set backupdir=$HOME/.vim.d/backup
set backupcopy=yes




set ruler
set noshowcmd
set nolazyredraw
set number




set showmatch
set incsearch
set ignorecase
set visualbell



set autoindent
set smartindent
set nowrap
set softtabstop=2
set shiftwidth=2
set tabstop=4
set expandtab
set nosmarttab
set smartcase
