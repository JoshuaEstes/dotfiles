# ~/.bash.d/completions

# If there is a default file, then load that one first
if [ -f /etc/bash_completion ]; then
  source /etc/bash_completion
fi

# git bash completions
if [ -f $HOME/.bash.d/completions.d/git ]; then
  source $HOME/.bash.d/completions.d/git
fi

# fabric completions
if [ -f $HOME/.bash.d/completions.d/fab ]; then
  source $HOME/.bash.d/completions.d/fab
fi

# capistrano completions
if [ -f $HOME/.bash.d/completions.d/cap ]; then
  source $HOME/.bash.d/completions.d/cap
fi

# This is for when you are trying to ssh into a server, you can use autocompelete,
# which will check your bash_history file and try to use that, very useful if you
# ssh into a lot of different machines =)
complete -W "$(echo $(grep '^ssh ' .bash_history | sort -u | sed 's/^ssh //'))" ssh
