# ~/.bash.d/functions

# apache2 functions
if [ -f $HOME/.bash.d/functions.d/apache ]; then
  source $HOME/.bash.d/functions.d/apache
fi

# mysql functions
if [ -f $HOME/.bash.d/functions.d/mysql ]; then
  source $HOME/.bash.d/functions.d/mysql
fi

# nagios function
if [ -f $HOME/.bash.d/functions.d/nagios ]; then
  source $HOME/.bash.d/functions.d/nagios
fi

# add a host to /etc/hosts
function addhost
{
  if [ -z "$1" -o -z "$2" ]; then
    echo "Usage: addhost 127.0.0.1 example.local"
    return;
  fi

  echo "$1 $2" | sudo tee -a /etc/hosts >/dev/null
  echo "Added $2 to /etc/hosts"
}

if [ -d $HOME/.bash.d/functions.d/enabled ]; then
  for FILE in $HOME/.bash.d/functions.d/enabled/*; do
    if [ -f $FILE ]; then
      source $FILE;
    fi
  done
fi
